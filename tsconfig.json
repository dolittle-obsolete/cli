{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "declaration": false,
        "stripInternal": true,
        "downlevelIteration": true,
    
        "strict": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
    
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "inlineSources": true,

    
        "experimentalDecorators": true,
        "rootDir": "Source",
        "outDir": "bin",
        "baseUrl": "./",
        "paths": {
            "@dolittle/cli": ["Source/index.ts"]
        },
        "sourceRoot": "./Source"
    },
    "exclude": ["**/*.d.ts", "**/*.js", "node_modules", "old"],
    "include": ["**/*.ts"] 
  }
  