{
  "name": "@dolittle/cli",
  "version": "7.0.0",
  "description": "CLI tool for Dolittle",
  "homepage": "https://dolittle.io",
  "author": "Dolittle",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dolittle-tools/cli.git"
  },
  "dolittle": {
    "host": {
      "defaultPlugins": [
        "@dolittle/tooling.plugin.runtime"
      ]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "bin"
  ],
  "preferGlobal": true,
  "bin": {
    "dolittle": "bin/dolittle.js"
  },
  "main": "bin/index.js",
  "scripts": {
    "clean": "rimraf bin",
    "build": "yarn clean && tsc",
    "test:clean": "rimraf 'bin/**/for_*'",
    "test:run": "mocha --require '@dolittle/typescript.build/mocha.opts' --reporter=spec 'bin/**/for_*/**/*.+(js|ts)'",
    "test": "yarn build && yarn test:run", 
    "prepublish": "yarn build && yarn test:run && yarn test:clean"
  },
  "optionalDependencies": {
    "@dolittle/tooling.common": "8.*",
    "@dolittle/tooling.common.boilerplates": "8.*",
    "@dolittle/tooling.common.commands": "8.*",
    "@dolittle/tooling.common.configurations": "8.*",
    "@dolittle/tooling.common.dependencies": "8.*",
    "@dolittle/tooling.common.files": "8.*",
    "@dolittle/tooling.common.logging": "8.*",
    "@dolittle/tooling.common.packages": "8.*",
    "@dolittle/tooling.common.plugins": "8.*",
    "@dolittle/tooling.common.utilities": "8.*"
  },
  "devDependencies": {

    "@dolittle/typescript.build": "latest",
    "@types/debug": "^4.1.4",
    "@types/inquirer": "^6.0.1",
    "@types/minimist": "^1.2.0",
    "@types/update-notifier": "^2.5.0"
  },
  "dependencies": {
    "@dolittle/tooling.common.host": "8.0.0-alpha.9",
    "chalk": "2.4.2",
    "conf": "3.0.0",
    "debug": "4.1.1",
    "inquirer": "6.4.1",
    "minimist": "1.2.0",
    "omelette": "0.4.12",
    "ora": "3.4.0",
    "update-notifier": "2.5.0"
  }
}
